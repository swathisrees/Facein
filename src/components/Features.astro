      icon: "M4 6h16M4 12h16m-7-6v12", // Adjust with actual security icon
      color: "red",
    },
  ].map((feature, index) => (
    <div
      key={index}
      class="group card relative p-6 backdrop-blur-lg border border-gray-600/30 bg-gray-800/30 dark:border-gray-700/40 rounded-xl transition-transform hover:-translate-y-2 hover:shadow-neon slide-up"
      style={{ animationDelay: `${index * 100}ms` }}
    >
      <!-- Icon with Neon Glow -->
      <div class="relative w-14 h-14 rounded-lg bg-gray-700/40 flex items-center justify-center mb-6 transition-all group-hover:shadow-neon">
        <svg
          class={`w-8 h-8 text-${feature.color}-400`}
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}></path>
        </svg>
        <span class={`absolute inset-0 animate-pulse bg-${feature.color}-400/20 rounded-lg blur-lg opacity-40`}></span>
