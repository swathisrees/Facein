---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Services",
    links: [
      { text: "IT Support ", url: "/expertise" },
      { text: "Software Development", url: "/expertise" },
      { text: "AI Development",url: "/expertise"  },
      { text: "Web Development",url: "/expertise"  },
      { text: "Cybersecurity Consulting", url: "/expertise" },
      { text: "IoT Solutions",url: "/expertise" }
    ]
  },
  {
    title: "Academy",
    links: [
      { text: "Cybersecurity Training", url: "/academy" },
      { text: "Ethical Hacking", url: "/academy" },
      { text: "Web & App Development", url: "/academy" },
      { text: "AI & Machine Learning", url: "/academy" },
      { text: "Cloud & DevOps", url: "/academy" }
    ]
  },
  
  {
    title: "Company",
    links: [
      { text: "About", url: "/company" },
      { text: "Careers", url: "/careers" },
      { text: "Blog", url: "/blog" },
      
    ]
  },
];
---

<footer class="bg-grey-900/80 dark:bg-grey-950/90 backdrop-saturate-150 rounded-xl shadow-lg text-white pt-16 pb-8">
  <div class="container-custom">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8 mb-12">
      <div class="md:col-span-2 lg:col-span-2">
        <a href="/" class="flex items-center mb-6" aria-label="Go to homepage">
          <img src="/facein-logo-nobg-svgver.svg" alt="Facein Logo" class="h-8 w-auto text-primary-400" />
          <span class="ml-2 text-xl font-display font-semibold text-white">Facein</span>
        </a>
        
        <p class="text-gray-400 mb-6 max-w-md">
          Code, Consult, Coach
        </p>
        <div class="flex space-x-4">
          <a href="https://www.linkedin.com/company/facein-technologies-pvt-ltd/" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="LinkedIn">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452z"></path>
            </svg>
          </a>
          <a href="https://www.instagram.com/facein_kochi/" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="Instagram">
            <svg 
                width="24" 
                height="24" 
                viewBox="0 0 24 24" 
                fill="currentColor" 
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2Zm0-2A7.75 7.75 0 0 0 0 7.75v8.5A7.75 7.75 0 0 0 7.75 24h8.5A7.75 7.75 0 0 0 24 16.25v-8.5A7.75 7.75 0 0 0 16.25 0h-8.5ZM12 6.5a5.5 5.5 0 1 1 0 11 5.5 5.5 0 0 1 0-11Zm0 2a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7Zm6.75-2.5a1.25 1.25 0 1 1 0 2.5 1.25 1.25 0 0 1 0-2.5Z" />
              </svg>

          </a>
        </div>
      </div>

      {footerLinks.map(column => (
        <div key={column.title} class="md:col-span-1">
          <h3 class="text-lg font-semibold mb-4">{column.title}</h3>
          <ul class="space-y-2">
            {column.links.map(link => (
              <li key={link.text}>
                <a href={link.url} class="text-gray-400 hover:text-primary-400 transition-colors">{link.text}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="border-t border-gray-800 pt-4 mt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm">&copy; {currentYear} Facein. All rights reserved.</p>
      <div class="flex space-x-6 text-sm mt-2 md:mt-0">
        <a href="/privacy-policy" class="text-gray-400 hover:text-primary-400 transition-colors">Privacy Policy</a>
        <a href="/terms-conditions" class="text-gray-400 hover:text-primary-400 transition-colors">Terms & Conditions</a>
      </div>
    </div>
  </div>
</footer>


