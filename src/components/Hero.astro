---
import { useEffect } from 'astro';

const headlines = [
  {
    title: "Ultimate coding solution for your business.",
    description: "We craft innovative tech solutions, provide expert consulting, and empower teams through training. Our three pillars— <span class='font-bold text-orange-500'>Code</span> for development, <span class='font-bold text-orange-600'>Consult</span> for strategy, and <span class='font-bold text-orange-700'>Coach</span> for growth—help businesses and individuals thrive in a dynamic digital world."
  },
  {
    title: "<span class='text-orange-600'>Facein'</span> Coding Challenges, Delivering Scalable Solutions",
    description: "We build high-performance, secure, and future-ready software tailored to your needs."
  },
  {
    title: "<span class='text-orange-600'>Facein'</span> Complex Decisions with Expert Solutions",
    description: "Strategic consulting to optimize technology, streamline operations, and drive growth."
  },
  {
    title: "<span class='text-orange-600'>Facein'</span> Skill Gaps with Industry-Leading Training",
    description: "Practical, hands-on programs to equip professionals with the latest tech expertise."
  }
];
---

<section class="relative pt-20 pb-20 md:pt-20 md:pb-2 overflow-hidden hero-section bg-gray-900/80 dark:bg-gray-950/90 backdrop-saturate-150 rounded-xl shadow-lg">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-10 left-20 w-96 h-96 bg-primary-500 blur-[120px] opacity-20"></div>
    <div class="absolute bottom-25 right-20 w-80 h-80 bg-indigo-500 blur-[100px] opacity-15"></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="slide-up" transition:animate="slide">
        <h1 class="mb-6 text-3xl md:text-5xl text-secondary-900 dark:text-white leading-tight dynamic-title"></h1>
        <p class="text-base md:text-xl text-secondary-600 dark:text-secondary-300 mb-8 max-w-lg dynamic-description"></p>
        
        <div class="flex flex-wrap gap-4">
          <a href="/contact" class="btn-outline-neon">Get in Touch</a>
          <a href="/company" class="btn-outline-neon">Learn More</a>
        </div>
      </div>

      <div class="absolute inset-0 pointer-events-none">
        <div class="particle w-3 h-3 bg-primary-500"></div>
        <div class="particle w-3 h-3 bg-indigo-500"></div>
        <div class="particle w-3 h-3 bg-yellow-400"></div>
        <div class="particle w-4 h-4 bg-pink-500"></div>
        <div class="particle w-4 h-4 bg-cyan-400"></div>
      </div>

      <div class="relative w-full h-full flex justify-center items-center">
        <img src="/laptopguy.svg" alt="SVG 1" class="animated-svg">
      </div>
    </div>
  </div>
</section>

<script>
  const headlines = [
    {
      title: "<span class='text-orange-600'>Ultimate</span> solution for your business.",
      description: "We craft innovative tech solutions, provide expert consulting, and empower teams through training. Our three pillars— <span class='font-bold text-orange-500'>Code</span> for development, <span class='font-bold text-orange-600'>Consult</span> for strategy, and <span class='font-bold text-orange-700'>Coach</span> for growth—help businesses and individuals thrive in a dynamic digital world."
    },
    {
      title: "<span class='text-orange-600'>Facein</span>' coding challenges, delivering scalable solutions.",
      description: "Building secure, high-performance software and AI-driven applications to help businesses innovate, optimize, and scale efficiently."
    },
    {
      title: "<span class='text-orange-600'>Facein</span>' complex decisions with expert solutions.",
      description: "Strategic consulting to streamline operations, enhance security, and drive digital transformation for sustainable business growth."
    },
    {
      title: "<span class='text-orange-600'>Facein</span>' skill gaps with industry-leading training.",
      description: "Hands-on training programs designed to equip professionals with cutting-edge tools, frameworks, and real-world expertise."
    }
  ];

  let currentIndex = 0;
  const titleElement = document.querySelector('.dynamic-title');
  const descriptionElement = document.querySelector('.dynamic-description');

  function updateText() {
    // Fade out
    titleElement.classList.remove('fade-in');
    descriptionElement.classList.remove('fade-in');
    titleElement.classList.add('fade-out');
    descriptionElement.classList.add('fade-out');

    setTimeout(() => {
      // Update content
      titleElement.innerHTML = headlines[currentIndex].title;
      descriptionElement.innerHTML = headlines[currentIndex].description;

      // Fade in
      titleElement.classList.remove('fade-out');
      descriptionElement.classList.remove('fade-out');
      titleElement.classList.add('fade-in');
      descriptionElement.classList.add('fade-in');

      // Move to next index
      currentIndex = (currentIndex + 1) % headlines.length;
    }, 500); // Match this timeout with the CSS transition duration
  }

  // Initial load
  updateText();

  // Cycle every 5 seconds
  setInterval(updateText, 5000);
</script>

<style>
  @keyframes floatAnimation {
    0% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeOut {
    from { opacity: 1; transform: translateY(0); }
    to { opacity: 0; transform: translateY(-10px); }
  }

  .animated-svg {
    width: auto;
    height: auto;
    animation: floatAnimation 3s ease-in-out infinite;
    margin: 10px;
  }

  .dynamic-title, .dynamic-description {
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .fade-in {
    animation: fadeIn 0.5s ease forwards;
  }

  .fade-out {
    animation: fadeOut 0.5s ease forwards;
  }
</style>