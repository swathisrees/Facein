---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
---

<Layout title="Careers - FaceIn Technologies">
  <Header />
  <main>
    <HeroSection 
      title="Join Our Team" 
      highlightText="Team"
      description="We're looking for talented professionals to help us shape the future of cybersecurity, IT support, AI, and software development."
    />
    
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Why Work With Us?</h2>
          
          <div class="grid md:grid-cols-2 gap-8 mb-16">
            <div class="card p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex items-center mb-4">
                <div class="rounded-full bg-primary-100 dark:bg-primary-900 p-3 mr-4">
                  <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Work on Cutting-Edge Tech</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-300">
                Join a team that builds innovative solutions in cybersecurity, IT outsourcing, AI, and IoT products.
              </p>
            </div>
            
            <div class="card p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex items-center mb-4">
                <div class="rounded-full bg-primary-100 dark:bg-primary-900 p-3 mr-4">
                  <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Growth & Learning</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-300">
                Work with industry experts, gain certifications, and enhance your technical skills in a dynamic environment.
              </p>
            </div>
            
            <div class="card p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex items-center mb-4">
                <div class="rounded-full bg-primary-100 dark:bg-primary-900 p-3 mr-4">
                  <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Diverse & Collaborative Culture</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-300">
                Be part of a fast-growing company where your ideas and contributions matter.
              </p>
            </div>
            
            <div class="card p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex items-center mb-4">
                <div class="rounded-full bg-primary-100 dark:bg-primary-900 p-3 mr-4">
                  <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Competitive Compensation</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-300">
                We offer attractive salary packages, growth incentives, and a balanced work-life environment.
              </p>
            </div>
          </div>
          
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Open Positions</h2>
          
          <div class="space-y-6 mb-16">
            <!-- Job Listing 1 -->
            <div class="card p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 md:mb-0">Cybersecurity Analyst</h3>
                <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                  Hybrid (Office + Remote)
                </span>
              </div>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                Help businesses secure their digital assets through vulnerability assessments, penetration testing, and risk mitigation strategies.
              </p>
              <a href="#" class="btn-outline-neon">Apply Now</a>
            </div>

            <!-- Job Listing 2 -->
            <div class="card p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 md:mb-0">IT Support Engineer</h3>
                <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                  On-Site / Remote
                </span>
              </div>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                Provide IT support to clients across different industries, ensuring seamless infrastructure management and troubleshooting.
              </p>
              <a href="#" class="btn-outline-neon">Apply Now</a>
            </div>

            <!-- Job Listing 3 -->
            <div class="card p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 md:mb-0">Full Stack Developer</h3>
                <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                  Remote
                </span>
              </div>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                Join our development team to build SaaS products, AI-based tools, and cybersecurity solutions.
              </p>
              <a href="#" class="btn-outline-neon">Apply Now</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout> 

