---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';
---

<Layout title="Cybersecurity Consulting">
  <Header />
  <main>
    <HeroSection 
      title="Cybersecurity " 
      highlightText="Consulting"
      description="Explore our comprehensive cybersecurity services designed to protect your business from evolving threats."
    />

    <section class="py-16 bg-gray-900/80 dark:bg-gray-950/90  backdrop-saturate-150 rounded-xl shadow-lg">
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-10 left-20 w-96 h-96  bg-green-500 blur-[120px] opacity-20"></div>
        <div class="absolute bottom-20 right-20 w-80 h-80 bg-primary-500 blur-[100px] opacity-15"></div>
      </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {[
            {
              title: "Security Auditing & Penetration Testing",
              description: "Comprehensive security audits and penetration testing to identify vulnerabilities and secure your systems.",
              icon: "M12 4v16m-7-7h14",
              color: "purple",
            },
            {
              title: "SOC (Security Operations Center)",
              description: "24/7 threat monitoring, incident detection, and response to protect your business from cyber threats.",
              icon: "M3 3h18M3 9h18M3 15h18M3 21h18",
              color: "green",
            },
            {
              title: "Security Consulting",
              description: "Tailored cybersecurity strategies, risk assessments, and compliance advisory to meet your business needs.",
              icon: "M4 6h16M4 12h16m-7-6v12",
              color: "red",
            },
            {
              title: "Business Continuity & Incident Response",
              description: "Plan and prepare for incidents with disaster recovery, crisis management, and post-incident reviews.",
              icon: "M9 12h6m-3-3v6",
              color: "yellow",
            },
            {
              title: "Secure Code Review",
              description: "Identify and remediate vulnerabilities in your codebase with static and dynamic code analysis.",
              icon: "M12 3v18m-6-6h12",
              color: "pink",
            },
            {
              title: "Digital Forensics",
              description: "Investigate incidents, recover data, and provide expert testimony with our digital forensics services.",
              icon: "M6 18V6a2 2 0 012-2h8a2 2 0 012 2v12",
              color: "orange",
            },
          ].map((service, index) => (
            <div
              key={index}
              class="group relative p-6 border border-gray-700/50 bg-black/50 backdrop-blur-lg rounded-xl transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-[0_0_20px_#FF6108] slide-up"
              style={{ animationDelay: `${index * 100}ms` }}
            >
              {/* Icon with Glow */}
              <div class="relative w-14 h-14 rounded-xl bg-gray-800/50 flex items-center justify-center mb-6 transition-all group-hover:shadow-[0_0_10px_#FF6108]">
                <svg
                  class={`w-8 h-8 text-${service.color}-400`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon}></path>
                </svg>
                <span class={`absolute inset-0 animate-pulse bg-${service.color}-400/20 rounded-lg blur-lg opacity-50`}></span>
              </div>

              <h3 class="text-2xl font-semibold mb-3 text-white group-hover:text-orange-400 transition-all">
                {service.title}
              </h3>
              <p class="text-gray-400 group-hover:text-gray-300 transition-all">
                {service.description}
              </p>
            </div>
          ))}
        </div>
        <div class="border-t border-gray-700 pt-16 mt-16">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <span class="inline-block px-4 py-1 rounded-full bg-gray-800 text-orange-400 font-medium text-sm mb-4">
                Custom Solutions
              </span>
              <h2 class="text-3xl font-bold text-white mb-6">Tailored Cybersecurity Solutions</h2>
              <p class="text-gray-400 mb-6">
                We provide custom cybersecurity solutions to meet your unique business needs. Our team works closely with you to design and implement strategies that ensure maximum protection and compliance.
              </p>
              <div class="space-y-4 mb-8">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Custom Security Assessments</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Tailored Incident Response Plans</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Compliance & Regulatory Support</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Ongoing Security Monitoring</p>
                </div>
              </div>
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="#" class="btn-primary">Contact Us</a>
                <a href="#" class="btn-outline-neon">Request a Demo</a>
              </div>
            </div>
            <div class="rounded-lg overflow-hidden shadow-xl">
              <div class="bg-gray-900 text-white p-4 font-mono text-sm">
                <div class="flex items-center mb-4">
                  <div class="w-3 h-3 rounded-full bg-red-500 mr-2"></div>
                  <div class="w-3 h-3 rounded-full bg-yellow-500 mr-2"></div>
                  <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <pre class="text-green-400">
$ <span class="text-white">security-scan --target example.com</span>
<span class="text-blue-400">[INFO]</span> Starting vulnerability scan...
<span class="text-blue-400">[INFO]</span> Scanning web application for common vulnerabilities...
<span class="text-blue-400">[INFO]</span> Detected potential SQL Injection vulnerability.
<span class="text-blue-400">[INFO]</span> Detected potential Cross-Site Scripting (XSS) vulnerability.
<span class="text-blue-400">[INFO]</span> Scan completed. Found 2 high-severity issues.

$ <span class="text-white">generate-report --format html</span>
<span class="text-blue-400">[INFO]</span> Generating security report...
<span class="text-blue-400">[INFO]</span> Report saved to <span class="text-yellow-400">/reports/example_com_scan.html</span>
                </pre>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>