---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';
import { Cpu, BrainCircuit, MessageCircle, Eye, Cctv, BookOpen } from 'lucide-astro';
---

<Layout title="AI Development">
  <Header />
  <main>
    <HeroSection 
      title="AI " 
      highlightText="Development"
      description="Unlock the power of artificial intelligence with our cutting-edge AI development services tailored to your business needs."
    />
    
    <!-- Services Section -->
    <section class="py-16 bg-gray-900/80 dark:bg-gray-950/90 backdrop-saturate-150 rounded-xl shadow-lg overflow-hidden">
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-10 left-20 w-96 h-96 bg-blue-500 blur-[120px] opacity-20"></div>
      </div>
      <div class="container-custom px-4 relative">
        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {[
            {
              title: "AI-Powered Applications",
              description: "Develop custom AI applications to automate processes, enhance decision-making, and improve user experiences.",
              icon: Cpu,
              color: "purple",
            },
            {
              title: "Machine Learning Models",
              description: "Design and deploy machine learning models for predictive analytics, natural language processing, and more.",
              icon: BrainCircuit,
              color: "green",
            },
            {
              title: "AI Chatbots & Virtual Assistants",
              description: "Create intelligent chatbots and virtual assistants to streamline customer support and engagement.",
              icon: MessageCircle,
              color: "red",
            },
            {
              title: "Computer Vision Solutions",
              description: "Build computer vision systems for image recognition, object detection, and video analysis.",
              icon: Eye,
              color: "yellow",
            },
            {
              title: "AI for IoT",
              description: "Integrate AI with IoT devices to enable smart automation and real-time data analysis.",
              icon: Cctv,
              color: "pink",
            },
            {
              title: "AI Consulting & Strategy",
              description: "Get expert guidance on AI adoption, strategy, and implementation tailored to your business goals.",
              icon: BookOpen,
              color: "orange",
            },
          ].map((service, index) => (
            <div
              key={index}
              class="group relative p-6 border border-gray-700/50 bg-black/50 backdrop-blur-lg rounded-xl transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-[0_0_20px_#3B82F6] slide-up"
              style={{ animationDelay: `${index * 100}ms` }}
            >
              {/* Icon with Glow */}
              <div class="relative w-14 h-14 rounded-xl bg-gray-800/50 flex items-center justify-center mb-6 transition-all group-hover:shadow-[0_0_10px_#3B82F6]">
                <service.icon class={`w-8 h-8 text-${service.color}-400`} />
                <span class={`absolute inset-0 animate-pulse bg-${service.color}-400/20 rounded-lg blur-lg opacity-50`}></span>
              </div>

              {/* Service Title & Description */}
              <h3 class="text-2xl font-semibold mb-3 text-white group-hover:text-blue-400 transition-all">
                {service.title}
              </h3>
              <p class="text-gray-400 group-hover:text-gray-300 transition-all">
                {service.description}
              </p>
            </div>
          ))}
        </div>

        <!-- Custom Solutions Section -->
        <div class="border-t border-gray-700 pt-16 mt-16">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <span class="inline-block px-4 py-1 rounded-full bg-gray-800 text-blue-400 font-medium text-sm mb-4">
                Custom AI Solutions
              </span>
              <h2 class="text-3xl font-bold text-white mb-6">Tailored AI Development</h2>
              <p class="text-gray-400 mb-6">
                We provide custom AI solutions to meet your unique business needs. Our team works closely with you to design and implement AI strategies that drive innovation and growth.
              </p>
              <div class="space-y-4 mb-8">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Custom AI Strategy Development</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">AI Model Training & Deployment</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">AI Integration with Existing Systems</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Ongoing AI Support & Maintenance</p>
                </div>
              </div>
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/contact" class="btn-primary">Contact Us</a>
                <a href="mailto:info@facein.in" class="btn-outline-neon" onclick="window.open('https://mail.google.com/mail/?view=cm&fs=1&to=info@facein.in', '_blank'); return false;">Request a Demo</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>