---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';
---

<Layout title="IT Support & Services">
  <Header />
  <main>
    <HeroSection 
      title="IT Support " 
      highlightText="& Services"
      description="Ensure seamless IT operations with our comprehensive IT support and services designed to keep your business running smoothly."
    />
    
    <!-- Services Section -->
    <section class="py-16 bg-gray-900/80 dark:bg-gray-950/90  backdrop-saturate-150 rounded-xl shadow-lg">
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-10 left-20 w-96 h-96  bg-yellow-500 blur-[120px] opacity-20"></div>
        <div class="absolute bottom-20 right-20 w-80 h-80 bg-teal-500 blur-[100px] opacity-15"></div>
      </div>
      <div class="container-custom relative ">

        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {[
            {
              title: "24/7 IT Support",
              description: "Round-the-clock IT support to resolve issues quickly and minimize downtime for your business.",
              icon: "M12 4v16m-7-7h14",
              color: "purple",
            },
            {
              title: "Network Management",
              description: "Design, implement, and manage secure and scalable network infrastructure for your business.",
              icon: "M3 3h18M3 9h18M3 15h18M3 21h18",
              color: "green",
            },
            {
              title: "Cloud Solutions",
              description: "Migrate to the cloud, optimize cloud infrastructure, and ensure seamless cloud operations.",
              icon: "M4 6h16M4 12h16m-7-6v12",
              color: "red",
            },
            {
              title: "Cybersecurity Services",
              description: "Protect your business from cyber threats with comprehensive security assessments and solutions.",
              icon: "M9 12h6m-3-3v6",
              color: "yellow",
            },
            {
              title: "Data Backup & Recovery",
              description: "Ensure business continuity with reliable data backup and disaster recovery solutions.",
              icon: "M12 3v18m-6-6h12",
              color: "pink",
            },
            {
              title: "IT Consulting & Strategy",
              description: "Get expert guidance on IT strategy, infrastructure, and digital transformation.",
              icon: "M6 18V6a2 2 0 012-2h8a2 2 0 012 2v12",
              color: "orange",
            },
          ].map((service, index) => (
            <div
              key={index}
              class="group relative p-6 border border-gray-700/50 bg-black/50 backdrop-blur-lg rounded-xl transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-[0_0_20px_#6366F1] slide-up"
              style={{ animationDelay: `${index * 100}ms` }}
            >
              {/* Icon with Glow */}
              <div class="relative w-14 h-14 rounded-xl bg-gray-800/50 flex items-center justify-center mb-6 transition-all group-hover:shadow-[0_0_10px_#6366F1]">
                <svg
                  class={`w-8 h-8 text-${service.color}-400`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon}></path>
                </svg>
                <span class={`absolute inset-0 animate-pulse bg-${service.color}-400/20 rounded-lg blur-lg opacity-50`}></span>
              </div>

              {/* Service Title & Description */}
              <h3 class="text-2xl font-semibold mb-3 text-white group-hover:text-indigo-400 transition-all">
                {service.title}
              </h3>
              <p class="text-gray-400 group-hover:text-gray-300 transition-all">
                {service.description}
              </p>
            </div>
          ))}
        </div>

        <!-- Custom Solutions Section -->
        <div class="border-t border-gray-700 pt-16 mt-16">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <span class="inline-block px-4 py-1 rounded-full bg-gray-800 text-indigo-400 font-medium text-sm mb-4">
                Custom IT Solutions
              </span>
              <h2 class="text-3xl font-bold text-white mb-6">Tailored IT Support & Services</h2>
              <p class="text-gray-400 mb-6">
                We provide custom IT solutions to meet your unique business needs. Our team works closely with you to design and implement IT strategies that ensure maximum efficiency and security.
              </p>
              <div class="space-y-4 mb-8">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Custom IT Strategy Development</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">IT Infrastructure Optimization</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Cybersecurity & Compliance</p>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <p class="text-gray-400">Ongoing IT Support & Maintenance</p>
                </div>
              </div>
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/contact" class="btn-primary">Contact Us</a>
                <a href="mailto:info@facein.in" class="btn-outline-neon" onclick="window.open('https://mail.google.com/mail/?view=cm&fs=1&to=info@facein.in', '_blank'); return false;">Request a Demo</a>
              </div>
            </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>