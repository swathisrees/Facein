---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
---

<Layout title="Facein Academy">
  <Header />
  <main>
    <HeroSection 
      title="Welcome to Facein Academy" 
      highlightText="Academy"
      description="Empower your future with industry-leading courses and expert guidance."
    />

    <!-- Featured Courses Section -->
    <section class="py-16 bg-gradient-to-b dark:from-secondary-950 dark:to-grey-950">
      <div class="container-custom">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-12">
          Our Featured Courses
        </h2>

        <div class="grid md:grid-cols-3 gap-12">
          <!-- Course Cards -->
          {["Full-Stack Web Development", "Cybersecurity & Ethical Hacking", "Artificial Intelligence & Machine Learning"].map((course, index) => (
            <div key={index} class="course-card relative overflow-hidden p-6 rounded-2xl">
              <h3 class="text-2xl font-semibold text-white mb-4">{course}</h3>
              <p class="text-gray-200 mb-6">
                {index === 0 && "Learn the latest web technologies and build powerful web applications."}
                {index === 1 && "Master cybersecurity techniques and become an ethical hacker."}
                {index === 2 && "Dive into the world of AI and build intelligent systems."}
              </p>
              <ul class="text-gray-300 mb-6 space-y-2">
                {index === 0 && (
                  <>
                    <li>Frontend & Backend Development</li>
                    <li>Hands-on Projects</li>
                    <li>Industry-Recognized Certification</li>
                  </>
                )}
                {index === 1 && (
                  <>
                    <li>Penetration Testing</li>
                    <li>Real-World Scenarios</li>
                    <li>Certified Training</li>
                  </>
                )}
                {index === 2 && (
                  <>
                    <li>Deep Learning & Neural Networks</li>
                    <li>Hands-on Projects</li>
                    <li>Expert Mentorship</li>
                  </>
                )}
              </ul>
              
              {/* Edit the view course button in later. */}
              {/* <a href="#" class="btn-outline-neon">View Course</a> */}

              <!-- Animated Neon Glow Effect -->
              <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-[#ff6108] to-[#ff914d] opacity-10 transition-opacity duration-500 group-hover:opacity-40"></div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
.course-card {
  @apply relative bg-opacity-10 backdrop-blur-lg shadow-xl border border-white/20 text-white transition-transform duration-500;
}

.course-card:hover {
  @apply scale-105 shadow-2xl border-white/40;
}

.course-card::before {
  content: "";
  @apply absolute inset-0 bg-gradient-to-r from-white/5 to-white/0 opacity-0 transition-opacity duration-500;
}

.course-card:hover::before {
  @apply opacity-20;
}
</style>
