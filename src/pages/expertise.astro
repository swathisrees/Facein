---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Code, ShieldCheck, Monitor, Headphones, Rss, BrainCircuit } from "lucide-astro";

const features = [
  {
    title: "Software Development",
    description:
      "We develop AI-powered applications, chatbots, and custom software solutions tailored for businesses, including SaaS applications, enterprise tools, and scalable platforms.",
    icon: Code,
    color: "purple",
  },
  {
    title: "Web Development",
    description:
      "Creating dynamic websites, web apps, and eCommerce solutions optimized for performance, security, and user experience.",
    icon: Monitor,
    color: "green",
  },
  {
    title: "Cybersecurity Consulting",
    description:
      "End-to-end cybersecurity solutions, VAPT, compliance, and risk assessments to protect businesses from cyber threats.",
    icon: ShieldCheck,
    color: "red",
  },
  {
    title: "AI Development",
    description:
      "Leverage AI-driven automation, machine learning models, and predictive analytics for your business growth.",
    icon: BrainCircuit,
    color: "black",
  },
  {
    title: "IT Support & Services",
    description:
      "24/7 IT support, cloud solutions, network management, and troubleshooting to keep businesses running smoothly.",
    icon: Headphones,
    color: "yellow",
  },
  {
    title: "IoT Solutions",
    description:
      "Smart IoT applications, device integrations, and automation solutions for industries and businesses.",
    icon: Rss,
    color: "pink",
  },
];
---

<Layout title="Facein Services">
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-b from-primary-100 to-white dark:from-primary-950 dark:to-secondary-950 pt-24 md:pt-32 pb-16 md:pb-20">
      <div class="absolute inset-0 z-0 opacity-30">
        <div class="absolute inset-0 bg-grid-pattern"></div>
      </div>

      <div class="container-custom relative z-10 text-center max-w-3xl mx-auto px-4">
        <h1 class="text-3xl md:text-4xl lg:text-5xl mb-4 md:mb-6 text-gray-900 dark:text-white animate-slide-down">
          Comprehensive IT & Cybersecurity Solutions
        </h1>
        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 mb-6 md:mb-8 animate-slide-up">
          FaceIn provides cutting-edge cybersecurity, IT support, AI development, and software solutions to help businesses thrive in the digital age.
        </p>
      </div>
    </section>

<!-- Services Section -->
<section id="services" class="section pt-20 pb-20 md:pt-15 md:pb-15 bg-gray-900/80 dark:bg-gray-950/90 relative overflow-hidden">
  <div class="container-custom relative">
    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
      {features.map((feature, index) => (
        <a
          key={index}
          href={`/services/${feature.title.toLowerCase().replace(/\s+/g, "-")}`}
          class="group relative p-6 backdrop-blur-lg border border-gray-600/30 bg-gradient-to-b from-gray-900/60 to-gray-800/10 rounded-xl transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-[0_0_20px_#FF6108] slide-up"
          style={{ animationDelay: `${index * 100}ms` }}
        >
          {/* Icon with Glow Effect */}
          <div
            class={`relative w-14 h-14 rounded-xl bg-gray-700/40 flex items-center justify-center mb-6 transition-all group-hover:scale-110 group-hover:shadow-md shadow-[${feature.color}-500]`}
          >
            <feature.icon size={50} stroke-width={1.5} class={`text-${feature.color}-400`} />
            <span class={`absolute inset-0 animate-pulse bg-${feature.color}-400/20 rounded-lg blur-lg opacity-50`}></span>
          </div>

          {/* Feature Title & Description */}
          <h3 class="text-2xl font-semibold mb-3 text-white group-hover:text-orange-400 transition-all">
            {feature.title}
          </h3>
          <p class="text-gray-400 group-hover:text-gray-300 transition-all">
            {feature.description}
          </p>
        </a>
      ))}
    </div>

    <!-- CTA Section -->
    <section class="cta-section py-12 md:py-16 text-center">
      <div class="container-custom">
        <h2 class="text-2xl md:text-3xl mb-4 text-gray-900 dark:text-white">Let's Work Together</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
          Get in touch to discuss how Facein Technologies can help your business grow.
        </p>
        <a href="/contact" class="btn-primary px-6 py-3">Contact Us</a>
      </div>
    </section>
  </div>
</section>

</main>
<Footer />
</Layout>